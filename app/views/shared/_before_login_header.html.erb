<header class="text-custom-brown body-font mt-3">
  <div class="container mx-auto flex flex-wrap items-center justify-between">
    <!-- ロゴアイコン -->
    <div class="flex items-center">
      <%= image_tag('Korean_Trip.png', size: "300x300") %>
    </div>

    <!-- ナビゲーションメニューと新規登録ボタン -->
    <div class="flex items-center">
      <nav class="flex items-center text-base">
        <!-- ナビゲーションリンク -->
        <%= link_to "ログイン", new_user_session_path, class: "mr-5 hover:text-custom-orange" %>
        <%= form_with(url: destroy_user_session_path, method: :delete, class: "hover:text-custom-orange") do |form| %>
          <%= form.submit "ログアウト", class: "link no-underline" %>
        <% end %>
      </nav>

      <!-- 新規登録ボタン -->
      <%= button_to "新規登録", new_user_registration_path, class: "inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-custom-orange rounded text-base ml-5", method: :get %>
    </div>
  </div>
</header>

