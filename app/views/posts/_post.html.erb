<div class="w-full md:w-1/3 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <%= image_tag 'board_placeholder.png', class: 'w-full h-48 object-cover' %>
      <div class="p-4">
        <h4 class="text-lg font-bold mb-2">
          <a href="#" class="hover:text-blue-500">
            <%= post.title %>
          </a>
        </h4>
        <div class="flex justify-end mb-2">
          <a href="#" class="text-red-500 hover:text-red-700 mr-2"><%= icon 'fas', 'trash', class: 'pr-1' %></a>
          <a href="#" class="text-blue-500 hover:text-blue-700"><%= icon 'fa', 'pen' %></a>
        </div>
        <ul class="flex mb-2">
          <li class="flex items-center mr-4">
            <%= icon 'far', 'user', class: 'mr-1' %>
          </li>
          <li class="flex items-center">
            <%= icon 'far', 'calendar', class: 'mr-1' %>
          </li>
        </ul>
        <p class="text-gray-700"><%= post.body %></p>
      </div>
    </div>
  </div>
</div>